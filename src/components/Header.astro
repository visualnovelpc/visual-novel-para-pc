---
import { url } from '../scripts/url'
---

<header>
  <h2>Visual Novel para PC</h2>

  <nav>
    <a href=`${url}/`>Inicio</a>
    <a href=`${url}/lista/1`>Lista de novelas</a>
    <a href=`${url}/buscar`>Buscar</a>
  </nav>
</header>

<style>
  header {
    @apply flex  flex-col md:flex-row w-full justify-between items-center bg-gradient-to-r from-slate-950 to-blue-950 px-2 pr-5;
  }
  a {
    @apply font-bold text-xl text-white;
  }

  h2 {
    @apply flex justify-between items-center px-5 py-3 bg-slate-900 text-4xl md:text-5xl bg-gradient-to-t from-rose-400 to-white bg-clip-text text-transparent font-lilita;
  }

  nav {
    @apply inline-flex gap-10 justify-center p-3 md:pr-10;
  }
</style>
